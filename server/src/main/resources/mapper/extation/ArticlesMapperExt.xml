<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pigs.blog.mapper.ext.ArticlesMapperExt">
    <sql id="selectList">
        where
        <if test="criteria.author != ''">
            author = #{criteria.author}
        </if>
    </sql>

    <select id="selectArticlesList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from articles
        <include refid="selectList"/>
        limit #{criteria.start}, #{criteria.offset}
    </select>

    <select id="countArticlesList" resultType="java.lang.Long">
        select
        count(*)
        from articles
        <include refid="selectList"/>
    </select>
</mapper>